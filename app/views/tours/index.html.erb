<p id="notice"><%= notice %></p>

<h1>Tours</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Location</th>
      <th>Activities</th>
      <th>Cost</th>
      <th>Start time</th>
      <th>End time</th>
      <th>Tour date</th>
      <th>Full</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tours.each do |tour| %>
      <tr>
        <td><%= tour.name %></td>
        <td><%= tour.location %></td>
        <td><%= tour.activities %></td>
        <td><%= tour.cost %></td>
        <td><%= tour.start_time %></td>
        <td><%= tour.end_time %></td>
        <td><%= tour.tour_date %></td>
        <td><%= tour.full %></td>
        <td><%= link_to 'Show', tour %></td>
        <td><%= link_to 'Edit', edit_tour_path(tour) %></td>
        <td><%= link_to 'Destroy', tour, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

